<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity"
    android:background="@drawable/bg6"
    android:id="@+id/wback">
    <Button
        android:id="@+id/btn_wback"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_back"
        android:backgroundTint="@color/white"/>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="580dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/login"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한 줄 일기 쓰기"
            android:textSize="40dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/font"
            android:textColor="#32445A"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 일을 한줄로 나타내보세요"
            android:fontFamily="@font/font"
            android:textColor="#313A43"
            android:layout_marginTop="15dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/font"
            android:textColor="#203347"
            android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/et_diary"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginTop="80dp"
            android:hint="일기 쓰기"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:background="@drawable/edit2"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:text="완료하기"
            android:textSize="28sp"
            android:fontFamily="@font/font"
            android:textColor="@color/white"
            android:background="@drawable/btn1"/>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
