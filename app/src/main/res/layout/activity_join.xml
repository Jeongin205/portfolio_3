<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/moon"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="polaris"
        android:textSize="55sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font"
        android:layout_marginTop="60dp"
        android:shadowColor="#23293A"
        android:shadowDy="8.0"
        android:shadowDx="8.0"
        android:shadowRadius="3"/>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:background="@drawable/login"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:shadowColor="#23293A"
            android:shadowDy="6.0"
            android:shadowDx="6.0"
            android:shadowRadius="3"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="이메일"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:shadowColor="#23293A"
            android:shadowDy="4.0"
            android:shadowDx="4.0"
            android:shadowRadius="3"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit"
            android:hint="  E-Mail"
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:shadowColor="#131723"
            android:shadowDy="4.0"
            android:shadowDx="4.0"
            android:shadowRadius="3"/>
        <EditText
            android:id="@+id/et_user"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:hint="  최대 8자 입력"
            android:inputType="text"
            android:maxLength="8"
            android:background="@drawable/edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="비밀번호"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:shadowColor="#131723"
            android:shadowDy="4.0"
            android:shadowDx="4.0"
            android:shadowRadius="3"/>
        <EditText
            android:id="@+id/et_pw"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:hint="  최소 8자 입력"
            android:inputType="text"
            android:maxLength="8"
            android:background="@drawable/edit"/>
        <EditText
            android:id="@+id/et_psw"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:hint="  비밀번호 확인"
            android:inputType="text"
            android:maxLength="8"
            android:background="@drawable/edit"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn1"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/font"/>
            <Button
                android:id="@+id/btn_back"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn2"
                android:text="취소"
                android:textSize="17dp"
                android:fontFamily="@font/font"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>